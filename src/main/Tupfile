include_rules

CC_FLAGS += $(UTIL_INC)

LD_FLAGS += -mwindows
LD_FLAGS += -nostdlib -Wl,-e_entry
LD_FLAGS += -lkernel32 -luser32 -lgdi32 -lopengl32

SRC += *.c
SRC += graphics/*.c

: $(BUILD_BIN) |> %f |> $(BUILD_OUT)
: foreach $(SRC) | $(BUILD_OUT) |> !CC |> {OBJ}
: {OBJ} $(UTIL_BIN) |> !LD |> main.exe {BIN}

ifneq ($(DEBUG),y)
	: {BIN} |> upx --ultra-brute %f -o%o |> %B_upx.exe
endif